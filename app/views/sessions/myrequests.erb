<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
      Welcome, <%= current_user.email %>

    <div class="w3-row-padding w3-padding-16">

<!--  requests I've made -->
      <div class="w3-third w3-margin-bottom">
        <h2>Requests I've made</h2>
          <% @requestsmade.each do |request| %>
              <!-- <img src="/w3images/room_single.jpg" alt="Norway" style="width:100%"> -->
              <div class="w3-container w3-white">
              <h3><%= space.name %></h3>
              <h6 class="w3-opacity">From <%= space.price %></h6>
              <p><%= @space.description %></p>
              <p class="w3-large"><i class="fa fa-bath"></i> <i class="fa fa-phone"></i> <i class="fa fa-wifi"></i></p>
              <button class="w3-btn-block w3-margin-bottom">View Request</button>
          <% end %>
        </div>
      </div>

<!-- requests others have made for my spaces -->
      <div class="w3-third w3-margin-bottom">
        <h2>Requests I've received</h2>
          <% @requestsreceived.each do |request| %>
            <!-- <img src="/w3images/room_single.jpg" alt="Norway" style="width:100%"> -->
            <div class="w3-container w3-white">
              <h3><%= space.name %></h3>
            <h6 class="w3-opacity">From <%= space.price %></h6>
            <p><%= @space.description %></p>
            <p class="w3-large"><i class="fa fa-bath"></i> <i class="fa fa-phone"></i> <i class="fa fa-wifi"></i></p>
            <button class="w3-btn-block w3-margin-bottom">View Request</button>
          <% end %>
        </div>
      </div>
    </div>

  </body>
</html>
